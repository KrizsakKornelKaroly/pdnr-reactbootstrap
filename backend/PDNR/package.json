{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node dist/app.js",
    "build": "tsc -p .",
    "typeorm": "typeorm-ts-node-commonjs",
    "watch": "tsc -w",
    "test": "jest",
    "start:pm2": "npm run build && pm2 start ecosystem.config.js --no-daemon",
    "typeorm:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/data-source.ts -n YourMigrationName",
    "typeorm:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/data-source.ts",
    "typeorm:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/data-source.ts",
    "typeorm:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d src/data-source.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express-session": "^1.18.0",
    "@types/ioredis": "^5.0.0",
    "@types/rate-limit-redis": "^1.7.4",
    "@types/redis": "^4.0.11",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "googleapis": "^140.0.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
